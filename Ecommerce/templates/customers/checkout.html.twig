{% extends 'common.html.twig' %}

{% block content %}
<div class="container mt-4 p-3">
<div class="row g-5">
    <div class="col-md-5 col-lg-4 order-md-last">
    <h4 id="total-count-cart" class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-primary">Il tuo carrello</span>
        
    </h4>
    <ul id="cart-list-checkout" class="list-group mb-3">
        <!--Filled by js-->
        <div id="cart-list-total">

        </div>
    </ul>
    </div>
    <div class="col-md-7 col-lg-8">
    <h4 class="mb-3">Dettagli spedizione</h4>
    <form class="needs-validation" novalidate="">
        <div class="row g-3">
        <div class="col-sm-6">
            <label for="firstName" class="form-label">Nome <span class="text-body-secondary">*</span></label>
            <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
            <div class="invalid-feedback">
            Il tuo nome è obbligatorio
            </div>
        </div>

        <div class="col-sm-6">
            <label for="lastName" class="form-label">Cognome <span class="text-body-secondary">*</span></label>
            <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
            <div class="invalid-feedback">
            Il tuo cognome è obbligatorio
            </div>
        </div>

        <div class="col-12">
            <label for="email" class="form-label">Email <span class="text-body-secondary">*</span></label>
            <input type="email" class="form-control" id="email" placeholder="you@example.com">
            <div class="invalid-feedback">
            Inserisci un'email valida
            </div>
        </div>

        <div class="col-12">
            <label for="address" class="form-label">Address <span class="text-body-secondary">*</span></label>
            <input type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
            <div class="invalid-feedback">
            Inserisci un'indirizzo esistente
            </div>
        </div>
        </div>

        <hr class="my-4">

        <h4 class="mb-3">Pagamento</h4>

        <div class="my-3">
        <div class="form-check">
            <input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked="" required="">
            <label class="form-check-label" for="credit">Credit card</label>
        </div>
        <div class="form-check">
            <input id="debit" name="paymentMethod" type="radio" class="form-check-input" required="">
            <label class="form-check-label" for="debit">Debit card</label>
        </div>
        <div class="form-check">
            <input id="paypal" name="paymentMethod" type="radio" class="form-check-input" required="">
            <label class="form-check-label" for="paypal">PayPal</label>
        </div>
        </div>

        <div class="row gy-3">
        <div class="col-md-6">
            <label for="cc-name" class="form-label">Nome completo</label>
            <input type="text" class="form-control" id="cc-name" placeholder="" required="">
            <small class="text-light">il nome e cognome riportati sulla carta di credito</small>
            <div class="invalid-feedback">
            Obbligatorio
            </div>
        </div>

        <div class="col-md-6">
            <label for="cc-number" class="form-label">Numero della carta di credito</label>
            <input type="text" class="form-control" id="cc-number" placeholder="" required="">
            <div class="invalid-feedback">
            Obbligatorio
            </div>
        </div>

        <div class="col-md-3">
            <label for="cc-expiration" class="form-label">Scadenza</label>
            <input type="text" class="form-control" id="cc-expiration" placeholder="" required="">
            <div class="invalid-feedback">
            Obbligatorio
            </div>
        </div>

        <div class="col-md-3">
            <label for="cc-cvv" class="form-label">CVV</label>
            <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
            <div class="invalid-feedback">
            Obbligatorio
            </div>
        </div>
        </div>

        <hr class="my-4">

        <button class="w-100 btn btn-primary btn-lg" type="submit">Continua il checkout</button>
    </form>
    </div>
</div>
</div>
<script src="{{ asset('js/checkout.js') }}" type="module"></script>

{% endblock content %}
    