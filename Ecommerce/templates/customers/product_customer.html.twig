{% extends 'common.html.twig' %}

{% block content %}
<div class="container">
<div class="row border-2 rounded-2 p-2 py-5">
    <div class="col-md-4">
        <div id="carousel" class="carousel slide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img src="{{product.imgPath1}}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="{{product.imgPath2}}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="{{product.imgPath3}}" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
            </div>
    </div>
    <div class="col-md-8 py-5 px-5">
        <h5>{{product.name}} - {{product.marca}}</h5>
        <p>{{product.descrizione}}</p>
        <p class="text-danger">Condizioni: {{product.condizioni}}</p>
        <h6>Costo: {{product.unitCost}}â‚¬</h6>
        <a id="liveAlertBtn" class="btn btn-primary" onclick="addProductToCart({{product.id}},'{{product.name}}',{{product.unitCost}},1,'{{product.imgPath1}}')">Aggiungi al carrello</a>
        <a class="btn btn-secondary" href="/catalogo_prodotti">Torna indietro</a>
        <!--Start success di conferma aggiunta al carrello-->
        <div id="successAddedToCart" class="alert alert-success alert-dismissible w-50 mt-3 d-none" role="alert">   
            <div>articolo aggiunto con successo</div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <!--End success di conferma aggiunta al carrello-->
    </div>
</div>
</div>

<script src="{{ asset('js/productDetail.js') }}" type="module"></script>

{% endblock content %}
