{% extends 'common.html.twig' %}

{% block content %}

<div class="container mt-4">
      <div class="row">
        <!-- Listino Prodotti -->
        <div class="col-lg-6">
          <h1 class="text-center">Listino Prodotti</h1>
          <input type="text" class="form-control mb-3" placeholder="Cerca prodotto">
          <div class="table-container">
            <table class="table table-dark table-striped">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Codice</th>
                  <th>Marca</th>
                  <th>Condizioni</th>
                  <th>Prezzo (€)</th>
                </tr>
              </thead>
              <tbody>
              {% for product in products %}
                
                <tr>
                <td>{{product.name}}</td>
                <td>{{product.id}}</td>
                <td>{{product.marca}}</td>
                <td>{{product.condizioni}}</td>
                <td>{{product.unitCost}}</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>

        <!-- Form Inserimento e Modifica -->
        <div class="col-lg-6">
          <div class="row">
            <!-- Inserimento Nuovo Prodotto -->
            <div class="col-lg-12 mb-4">
              <h2>Inserimento Nuovo Prodotto</h2>
              <div class="table-container">
                <form>
                  <div class="mb-3">
                    <label for="productName" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="productName">
                  </div>
                  <div class="mb-3">
                    <label for="productBrand" class="form-label">Marca</label>
                    <input type="text" class="form-control" id="productBrand">
                  </div>
                  <div class="mb-3">
                    <label for="productCode" class="form-label">Codice</label>
                    <input type="text" class="form-control" id="productCode">
                  </div>
                  <div class="mb-3">
                    <label for="productQuantity" class="form-label">Quantità</label>
                    <input type="number" class="form-control" id="productQuantity">
                  </div>
                  <div class="mb-3">
                    <label for="productCondition" class="form-label">Condizioni</label>
                    <input type="text" class="form-control" id="productCondition">
                  </div>
                  <div class="mb-3">
                    <label for="floatingTextarea" class="form-label">Descrizione</label>
                    <textarea class="form-control" placeholder="Descrizione prodotto" id="floatingTextarea"></textarea>

                  </div>
                  <div class="mb-3">
                    <label for="productPrice" class="form-label">Prezzo (€)</label>
                    <input type="text" class="form-control" id="productPrice">
                  </div>
                  <button type="submit" class="btn btn-primary">Inserisci Prodotto</button>
                </form>
              </div>
            </div>

            <!-- Modifica Prodotto -->
            <div class="col-lg-12">
              <h2>Modifica Dati Prodotto</h2>
              <div class="table-container">
                <form>
                  <div class="mb-3">
                    <label for="modifyProductCode" class="form-label">Codice Prodotto</label>
                    <input type="text" class="form-control" id="modifyProductCode">
                  </div>
                  <div class="mb-3">
                    <label for="modifyQuantity" class="form-label">Modifica Quantità</label>
                    <input type="number" class="form-control" id="modifyQuantity">
                  </div>
                  <div class="mb-3">
                    <label for="modifyPrice" class="form-label">Modifica Prezzo (€)</label>
                    <input type="text" class="form-control" id="modifyPrice">
                  </div>
                  <button type="submit" class="btn btn-secondary">Conferma Modifiche</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


{% endblock content %}